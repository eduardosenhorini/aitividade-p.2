import java.util.Scanner;
class dois {
  public static void main(String[] args) {
    
    Scanner entrada = new Scanner(System.in);
        int n;
        int[] termos;

        System.out.print("Insira o valor de n: ");
        n = entrada.nextInt();
        termos = new int[n];
        
        for (int index = 0, num = 1; index < n; num++) {
            termos[index] = num;
            index++;
            if (index < n) {
                termos[index] = num;
                index++;
            }
        }
        
        System.out.print("Os primeiros " + n + " termos da série são: ");
        for (int i = 0; i < n; i++) {
            System.out.print(termos[i] + " ");
        }
        
    }
}


